
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>




@model IEnumerable<TrackMyDay.Models.JobModel>


<input id="myInput" type="text" placeholder="What are You Looking for !!!!" />
<br /><br />


<table class="table">

    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Company)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.Weblink)
        </th>

        <th class="rubel">
            @Html.DisplayNameFor(model => model.Address)
        </th>

        <th class="rubel">
            @Html.DisplayNameFor(model => model.Type)
        </th>

        <th class="rubel">
            @Html.DisplayNameFor(model => model.Announcement)
        </th>

        <th class="rubel">
            @Html.DisplayNameFor(model => model.ContacInfo)
        </th>

        <th class="rubel">
            @Html.DisplayNameFor(model => model.ApplyThrough)
        </th>

        <th class="rubel">
            @Html.DisplayNameFor(model => model.Status)
        </th>

        <th class="rubel">
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th class="rubel">
            @Html.DisplayNameFor(model => model.ApplyDate)
        </th>
        <th class="rubel">
            @Html.DisplayNameFor(model => model.Refferance)
        </th>

        <th>

        </th>
    </tr>


    @foreach (var item in Model)
    {

    <tr class="card">
        <td class="card-header col-sm-3 ">
            <a href="#" onClick="ApplicationDetails(@item.Id)" ;>@item.Position</a>
        </td>
        <td class="card-header">
            @Html.DisplayFor(modelItem => item.Company)
        </td>

        <td class="card-header col-sm-3">
            <a target="_blank" href="@item.Weblink"> Check Link</a>
           
        </td>

        <td class="card-header col-sm-3 rubel">
            @Html.DisplayFor(modelItem => item.Address)
        </td>

        <td class="card-header col-sm-3 rubel">
            @Html.DisplayFor(modelItem => item.Type)
        </td>

        <td class="card-header col-sm-3 rubel">
            @Html.DisplayFor(modelItem => item.Announcement)
        </td>

        <td class="card-header col-sm-3 rubel">
            @Html.DisplayFor(modelItem => item.ContacInfo)
        </td>

        <td class="card-header col-sm-3 rubel">
            @Html.DisplayFor(modelItem => item.ApplyThrough)
        </td>

        <td class="card-header col-sm-3 rubel">
            @Html.DisplayFor(modelItem => item.Status)
        </td>

        <td class="card-header col-sm-3 rubel">
            @Html.DisplayFor(modelItem => item.Date)
        </td>

        <td class="card-header col-sm-3 rubel">
            @Html.DisplayFor(modelItem => item.ApplyDate)
        </td>

        <td class="card-header col-sm-3 rubel">
            @Html.DisplayFor(modelItem => item.Refferance)
        </td>

        <td class="card-header col-sm-3">
            <a class="collapsed card-link" onclick="UpdateData(@item.Id)" data-toggle="collapse" href="#@item.Id">Update </a>
        </td>
    </tr>

        <tr id="@item.Id" class="collapse " data-parent="#accordion ">
            <td class="card-body">
                <form id="UpdateInformation" action=" https://localhost:44396/JobApplication/Edit" method="post">

                    <div class="form-horizontal">

                        <div class="@item.Id"></div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="button" value="Submit" class="btn btn-default" id="Submit" onclick="UpdateDataforedit()" data-toggle="collapse" href="#@item.Id" />
                            </div>
                        </div>
                    </div>


                </form>

            </td>
        </tr>

    }


</table>




<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $(".card ").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

        $(".rubel").hide();
    });



    function UpdateData(id) {

        var id = id;
        var url = "/JobApplication/Edit";

        $.ajax({

            url: url,
            data: { id: id },

            success: function (data) {

                $('.' + id).html(data);

            }

        });

    }

    function UpdateDataforedit() {

        alert("Rubel");
        var frm = $('#UpdateInformation');
        $.ajax({
            type: frm.attr('method'),
            url: frm.attr('action'),
            data: frm.serialize(),
            success: function (data) {

                if (data == "True") {

                    alert(" Job info is Updated !!!");
                }
                else {
                    alert("Failed !!!");
                }

            },
            error: function (data) {
                alert("Failed !!!");
            },
        });

    }


    function ApplicationDetails(id) {

        var id = id;
        var url = "/JobApplication/Detail";

        $.ajax({

            url: url,
            data: { id: id },

            success: function (data) {
                $('#Detailscontainer').html(data);
                $('#JobDetails').modal();
            }

        });

    }



</script>


<div class="modal fade" id="JobDetails">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <div id="Detailscontainer">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>




